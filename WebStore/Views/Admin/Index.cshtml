@model WebStore.Models.RoleModel.EditRoleViewModel;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Roles";
}

<h5 class="text-center text-primary font-weight-bold">@ViewData["Title"]</h5>
<hr>
    
<form asp-controller="Admin" asp-action="FindRoleByName" method="post">
    <div class="mb-3 w-50 mx-auto">
        <!-- <label asp-for="RoleName" class="form-label">Role Name</label> -->
        <!-- <input asp-for="RoleName" class="form-control" aria-required="true" placeholder="Name"/> -->
        <!-- <span asp-validation-for="RoleName" class="text-danger"></span> -->

        <div class="input-group mb-3">
            <input asp-for="RoleName" class="form-control" aria-required="true" placeholder="Role Name"
                   aria-label="Product name" aria-describedby="basic-addon2" />
            <span asp-validation-for="RoleName" class="text-danger"></span>

            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>

            
        </div>

    </div>
</form>

<hr/>
<h5 class="text-center text-primary font-weight-bold">Create Role</h5>

<div class="d-grid mb-3 text-center w-25 mx-auto">
    <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-primary mb-3">Create</a>
</div>

<hr/>

<div class="text-center mb-3 w-50 mx-auto">
    <a asp-controller="Admin" asp-action="ListRoles" class="btn btn-primary mb-2">Get All</a>
    <a asp-controller="Admin" asp-action="AssignRole" class="btn btn-primary mb-2">Assign Role to User</a>
</div>
            
