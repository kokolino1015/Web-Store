@model WebStore.Models.RoleModel.EditRoleViewModel;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Roles";
}

<h3 class="text-center">@ViewData["Title"]</h3>
<hr>
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="FindRoleByName" method="post">
            <div class="mb-3">
                <label asp-for="RoleName" class="form-label">Role Name</label> 
                <input asp-for="RoleName" class="form-control" aria-required="true" placeholder="Name"/>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="mb-3"><input type="submit" class="btn btn-secondary mb-2" value="Search"></input>
            <a asp-controller="Admin" asp-action="ListRoles" class="btn btn-secondary mb-2">Get All Roles</a>
            <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-secondary mb-2">Create Role</a>
            <a asp-controller="Admin" asp-action="AssignRole" class="btn btn-secondary mb-2">Assign Role to User</a>
            </div>
            
        </form>


        <!-- <hr> -->
