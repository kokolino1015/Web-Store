                <a asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-primary mb-2">Delete</a>
                  </div>
            }*@
            <div class="d-flex justify-content-center">
                <h3>Products</h3>
            </div>
            <div class="d-flex justify-content-center flex-wrap">
                
            @foreach (var product in ViewBag.Products)
            {
                <div class="card" style="width: 20rem;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><span class="fw-bold"></span> @(product.Name)</li>
                        <li class="list-group-item"><span class="fw-bold">Description: </span> @(product.Description?.Substring(0, Math.Min(product.Description.Length, 10)) + (product.Description?.Length > 10 ? "..." : ""))</li>
                        <li class="list-group-item">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                               class="btn btn-primary mb-2">View</a>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"
                                   class="btn btn-primary mb-2">Edit</a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                                   class="btn btn-primary mb-2">Delete</a>
                            @*    @if (ViewBag.Role == "employer")
                            {
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"
                                   class="btn btn-primary mb-2">Edit</a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                                   class="btn btn-primary mb-2">Delete</a>
                            }*@
                        </li>
                    </ul>
                </div>
            }
            </div>
        </div>
    </div>
</div>