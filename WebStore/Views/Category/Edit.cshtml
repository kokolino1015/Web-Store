@model WebStore.Models.CategoryModel.CategoryFormModel

@{
    ViewBag.Title = "Edit Category";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label> <input asp-for="Name"
                                                                             class="form-control"
                                                                             aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3"><input class="btn btn-secondary mb-2" type="submit" value="Edit" /></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
