@model WebStore.Models.ProductModel.ProductFormModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Product";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<h5 class="text-center text-primary font-weight-bold">@ViewData["Title"]</h5>
<hr />

@if (!string.IsNullOrWhiteSpace(@errorMessage))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
    </div>
}

<div class="mb-2">
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary mb-2" style="float: right">Cancel</a>
</div>

<form asp-action="Delete" method="post" autocomplete="off">         
    <div class="mb-2">
        <label asp-for="Id" class="form-label text-primary" >Id</label>
        <input asp-for="Id" class="form-control" type="text" readonly />
    </div>

    <div class="mb-2">
        <label asp-for="Name" class="form-label text-primary">Name</label>
        <input asp-for="Name" class="form-control" aria-required="true" type="text" readonly />        
    </div>

    <div class="mb-2">         
        <label asp-for="Description" class="form-label text-primary">Description</label>
        <input asp-for="Description" class="form-control" aria-required="true" type="text" readonly />      
    </div>

    <div class="mb-2">
        <label asp-for="Category" class="form-label text-primary">Category</label>
        <select asp-for="Category" class="form-control" readonly >
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">     
        <label asp-for="Price" class="form-label text-primary">Price</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input asp-for="Price" class="form-control" aria-required="true" type="number" step="0.01" readonly/> 
        </div>
    </div>
           
    <div class="d-grid">
        <button class="btn btn-danger" type="submit" 
        onclick="return confirm ('Are you sure to delete product: @Model.Name?')">Delete</button>
    </div>
</form>
