@model WebStore.Models.ProductModel.ProductFormModel
@{
    ViewData["Title"] = "Edit/Delete Product";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" asp-controller="Product" asp-action="Edit">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label> <input asp-for="Name"
                                                                                           class="form-control"
                                                                                           aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="OriginalPrice" class="form-label">Price</label> <input asp-for="OriginalPrice"
                                                                                           class="form-control"
                                                                                           aria-required="true" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label> <input asp-for="Description"
                                                                               class="form-control"
                                                                               aria-required="true" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label> <select asp-for="Category"
                                                                                      class="form-control">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }

                </select> <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="mb-3"><input class="btn btn-secondary mb-2" type="submit" value="Edit" /></div>
        </form>
    </div>
</div>