@using WebStore.Models.ProductModel
@model ProductFormModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "List Products By Category";
}

<h5 class="text-center">@ViewData["Title"]:</h5>
<h5 class="text-center">@ViewData["CategoryName"]</h5>

<table id="tblProducts" class="table" cellpadding="0" cellspacing="0">
    <tr>
        <th style="width:100px">Product Id</th>
        <th style="width:150px">Name</th>
        <th style="width:150px">Description</th>
        <th style="width:100px">Price</th>
        <th style="width:100px">Reviews</th>
    </tr>
    @foreach (var product in ViewData["ProductsList"] as List<ProductFormModel>)
    {
        <tr>
            <td class="ProductId">
                <span>@product.Id</span>
            </td>
            <td class="Name">
                <span>@product.Name</span>
                <input type="text" value="@product.Name" style="display:none" />
            </td>
            <td class="Description">
                <span>@product.Description</span>
                <input type="text" value="@product.Description" style="display:none" />
            </td>
            <td class="Price">
                <span>@product.Price</span>
                <input type="number" step="0.01" value="@product.Price" style="display:none" />
            </td>
            <td class="Reviews">
                <span>@product.Reviews.Count()</span>
                <input type="number" value="@product.Price" style="display:none" />
            </td>
            <td>
                <a class="Edit" href="javascript:;">Edit</a>
                <a class="Update" href="javascript:;" style="display:none">Update</a>
                <a class="Cancel" href="javascript:;" style="display:none">Cancel</a>
                <a class="Delete" href="javascript:;">Delete</a>
            </td>
        </tr>
    }
</table>

<h5 class="text-center">Add Product</h5>

<form asp-action="Create" method="post">
<table border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td style="width: 150px">
            Name<br />
            <!-- <input type="text" id="txtName" style="width:140px" /> -->
            <input asp-for="Name" style="width:140px" aria-required="true" />
        </td>
        <td style="width: 150px">
            Description:<br />
            <!-- <input type="text" id="txtDescription" style="width:140px" /> -->
            <input asp-for="Description" style="width:140px" aria-required="true" />
        </td>
        <td style="width: 150px">
             Price:<br />
             <!-- <input type="number" step="0.01" id="numPrice" style="width:140px" /> -->
             <input asp-for="Description" style="width:140px" aria-required="true" />
        </td>

        <input asp-for="Category" type="hidden" value=@ViewData["CategoryId"] />

        <td style="width: 200px">
            <br />
                <input type="button" id="btnAdd" class="btn btn-primary mb-0" value="Add" />
        </td>
    </tr>
</table>
</form>