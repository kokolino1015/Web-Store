@model WebStore.Models.SalesModel.SalesOnCategory
@{
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="SaleOnCategory" method="post">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label> <input asp-for="Title"
                                                                             class="form-control"
                                                                             aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label> <select asp-for="Category"
                                                                                      class="form-control">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }

                </select> <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount">Discount:</label>
                <input asp-for="Discount" type="number" step="1" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="mb-3"><input class="btn btn-secondary mb-2" type="submit" /></div>
        </form>
    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}